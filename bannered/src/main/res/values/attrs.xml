<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Bannered">
        <!--banner view-->
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="cardBackgroundColor" format="color"/>
        <attr name="key" format="string" required="true"/>

        <!--title-->
        <attr name="title" format="string"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleEnabled" format="boolean" />

        <!--description-->
        <attr name="description" format="string"/>
        <attr name="descriptionTextColor" format="color"/>
        <attr name="descriptionTextSize" format="dimension"/>

        <!--negative button-->
        <attr name="negativeButtonEnabled" format="boolean"/>
        <attr name="negativeButtonText" format="string"/>
        <attr name="negativeButtonTextColor" format="color"/>

    </declare-styleable>
</resources>